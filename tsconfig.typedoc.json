{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6"
  },
  "typedocOptions": {
    "name": "Stacks.js",
    "json": "docs/docs.json",
    "out": "docs",
    "readme": "./readme.md",
    "theme": "stacks",
    "excludePrivate": true,
    "excludeProtected": true,
    "listInvalidSymbolLinks": true,
    "categoryOrder": [
      "*",
      "Other"
    ],
    // theme and plugin options
    "external-modulemap": ".*\/packages\/([\\w\\-_]+)\/",
    "package-prefix": "@stacks",
  }
}
